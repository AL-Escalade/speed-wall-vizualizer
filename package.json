{
  "name": "voie-vitesse",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "oxlint --type-aware packages/",
    "build": "npx tsc -b && npm run build -w @voie-vitesse/web",
    "build:core": "npm run build -w @voie-vitesse/core",
    "build:cli": "npm run build -w @voie-vitesse/cli",
    "build:web": "npm run build -w @voie-vitesse/web",
    "dev:web": "npm run dev -w @voie-vitesse/web",
    "generate": "npm run generate -w @voie-vitesse/cli --",
    "generate:base": "npm run generate -w @voie-vitesse/cli -- -c ../../data/base.json -o ../../output/base.svg",
    "generate:assets": "npx tsx scripts/generate-bundled-assets.ts",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "oxlint": "^1.32.0",
    "oxlint-tsgolint": "^0.8.6",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}
